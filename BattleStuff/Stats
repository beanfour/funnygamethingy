public class BattleStats
{
    // Base stats
    public readonly int baseHp;
    public readonly int baseAttack;
    public readonly int baseDefense;
    public readonly int baseSpeed;
    // Current stats
    public int health; 
    public int attack;
    public int defense;
    public int speed;

    public BattleStats(int initHP, int initAttack, int initDefense, int initSpeed)
    {
        baseHp = initHP;
        baseAttack = initAttack;
        baseDefense = initDefense;
        baseSpeed = initSpeed;
    }

    public void DisplayStats()
    {
        Console.WriteLine($"Health: {health}, Attack: {attack}, Defense: {defense}, Speed: {speed}");
    }
}